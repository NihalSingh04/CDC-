#include <iostream>
using namespace std;

// Recursive function to count digits
int countDigits(int n)
{
  if (n == 0)
    return 0;
  return 1 + countDigits(n / 10);
}

int main()
{
  int n;
  cout << "Enter a number: ";
  cin >> n;

  // Edge case for 0
  if (n == 0)
    cout << "Number of digits: 1" << endl;
  else
    cout << "Number of digits: " << countDigits(n) << endl;

  return 0;
}
