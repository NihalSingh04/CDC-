#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int main()
{
  string s;
  cout << "Enter a sentence: ";
  getline(cin, s);

  stringstream ss(s);
  string word;
  int count = 0;

  while (ss >> word)
    count++;

  cout << "Number of words: " << count << endl;

  return 0;
}

/*
Explanation:
- Use stringstream to split by spaces.
- Every extracted word increases count.

Example:
Input: "This is a test"
Output: 4

Time Complexity: O(n)
Space Complexity: O(1)
*/
