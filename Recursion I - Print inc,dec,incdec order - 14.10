#include <iostream>
using namespace std;

// Print in decreasing order
void printDecreasing(int n)
{
  if (n == 0)
    return;
  cout << n << " "; // Print first (decreasing)
  printDecreasing(n - 1);
}

// Print in increasing order
void printIncreasing(int n)
{
  if (n == 0)
    return;
  printIncreasing(n - 1);
  cout << n << " "; // Print after recursive call (increasing)
}

// Print decreasing-increasing pattern
void printDecInc(int n)
{
  if (n == 0)
    return;
  cout << n << " "; // Decreasing part
  printDecInc(n - 1);
  cout << n << " "; // Increasing part
}

int main()
{
  int n;
  cout << "Enter a number: ";
  cin >> n;

  cout << "\nDecreasing Order: ";
  printDecreasing(n);

  cout << "\nIncreasing Order: ";
  printIncreasing(n);

  cout << "\nDecreasing-Increasing Pattern: ";
  printDecInc(n);

  return 0;
}
